# Registry configuration
registry=https://registry.npmjs.org/

# Engine strictness - ensure engines field in package.json is respected
engine-strict=true

# Legacy peer dependencies
# Required because React 19 is used with Next.js 14.2 which officially supports React ^18.2.0
# Once Next.js has full React 19 support, this can be removed
# See: https://nextjs.org/docs/messages/react-version
legacy-peer-deps=true

# Lockfile version - use v3 lockfile format (npm 7+)
lockfile-version=3

# Save exact versions for production dependencies to prevent surprises
save-exact=false

# Progress indicator
progress=true
